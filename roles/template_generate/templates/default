DEFAULT menu.c32
PROMPT 0
TIMEOUT 600
TOTALTIMEOUT 9000
MENU TITLE PXE Ansible Boot Installer

LABEL kickstart
   MENU DEFAULT
   MENU LABEL {{ inventory_hostname }} kickstart
   KERNEL http://{{ groups.deployment_servers[0] }}/pub/centos/{{ centos_version }}/{{ pxepath }}/vmlinuz
   APPEND initrd=http://{{ groups.deployment_servers[0] }}/pub/centos/{{ centos_version }}/{{ pxepath }}/initrd.img ramdisk_size=1000000 ks=http://{{ groups.deployment_servers[0] }}/ks/{{ inventory_hostname }}/ks.conf stage2=http://{{ groups.deployment_servers[0] }}/pub/centos/{{ centos_version }}/os/x86_64/

LABEL bootlocal
   MENU LABEL Boot local system
   LOCALBOOT 0

